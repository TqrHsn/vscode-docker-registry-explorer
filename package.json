{
    "name": "vscode-docker-registry-explorer",
    "displayName": "Docker registry explorer",
    "description": "Explore and manage Docker Images, for private Docker Registries.",
    "license": "SEE LICENSE IN LICENSE.txt",
    "icon": "resources/docker_icon.png",
    "version": "0.0.1",
    "galleryBanner": {
        "color": "#1289B9",
        "theme": "dark"
    },
    "author": {
        "name": "Tauqeer Hassan",
        "email": "tqrhsn@outlook.com"
    },
    "publisher": "TqrHsn",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "docker",
        "explorer",
        "registry",
        "docker private registry",
        "docker V2"
    ],
    "repository": {
        "url": "https://github.com/<to-be-added>.git"
    },
    "homepage": "https://github.com/<to-be-added>/README.md",
    "activationEvents": [
        "onView:pvtDockerRegExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "pvtDockerRegExplorer",
                    "name": "Private Docker Explorer"
                }
            ]
        },
        "commands": [
            {
                "command": "pvtDockerRegExplorer.addEntry",
                "title": "Add registry"
            },
            {
                "command": "pvtDockerRegExplorer.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "pvtDockerRegExplorer.registryNode.refreshEntry",
                "title": "Refresh"
            },
            {
                "command": "pvtDockerRegExplorer.registryNode.deleteEntry",
                "title": "Delete"
            },
            {
                "command": "pvtDockerRegExplorer.repositoryNode.refreshEntry",
                "title": "Refresh"
            },
            {
                "command": "pvtDockerRegExplorer.tagNode.pullImage",
                "title": "Pull"
            },
            {
                "command": "pvtDockerRegExplorer.tagNode.removeLocalImage",
                "title": "Remove local"
            },
            {
                "command": "pvtDockerRegExplorer.tagNode.removeRemoteImage",
                "title": "Delete from repository"
            },
            {
                "command": "pvtDockerRegExplorer.tagNode.loadMore",
                "title": "Load more items"
            },
            {
                "command": "pvtDockerRegExplorer.layerNode.copyDigest",
                "title": "Copy digest"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "pvtDockerRegExplorer.refreshEntry",
                    "when": "view == pvtDockerRegExplorer",
                    "group": "navigation"
                },
                {
                    "command": "pvtDockerRegExplorer.addEntry",
                    "when": "view == pvtDockerRegExplorer"
                }
            ],
            "view/item/context": [
                {
                    "command": "pvtDockerRegExplorer.registryNode.refreshEntry",
                    "when": "view == pvtDockerRegExplorer && viewItem == registryNode",
                    "group": "group@1"
                },
                {
                    "command": "pvtDockerRegExplorer.registryNode.deleteEntry",
                    "when": "view == pvtDockerRegExplorer && viewItem == registryNode",
                    "group": "group@2"
                },
                {
                    "command": "pvtDockerRegExplorer.repositoryNode.refreshEntry",
                    "when": "view == pvtDockerRegExplorer && viewItem == repositoryNode"
                },
                {
                    "command": "pvtDockerRegExplorer.layerNode.copyDigest",
                    "when": "view == pvtDockerRegExplorer && viewItem == layerNode"
                },
                {
                    "command": "pvtDockerRegExplorer.tagNode.pullImage",
                    "when": "view == pvtDockerRegExplorer && viewItem == tagNode",
                    "group": "2_group1@1"
                },
                {
                    "command": "pvtDockerRegExplorer.tagNode.removeLocalImage",
                    "when": "view == pvtDockerRegExplorer && viewItem == tagNode",
                    "group": "2_group1@2"
                },
                {
                    "command": "pvtDockerRegExplorer.tagNode.removeRemoteImage",
                    "when": "view == pvtDockerRegExplorer && viewItem == tagNode",
                    "group": "3_group2@1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "@types/copy-paste": "^1.1.30",
        "@types/keytar": "^4.0.1"
    },
    "dependencies": {
        "typed-rest-client": "^1.0.7",
        "copy-paste": "^1.3.0"
    }
}